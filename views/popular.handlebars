<h3>Product Rank</h3>
<table class="table">
  <thead>
    <tr>
      <th>Product Name</th>
      <th>Color</th>
      <th>Orders</th>
      <th>Total</th>
    </tr>
  </thead>
  <tbody>
    {{#each rankings}}
    	<tr>
        <td><a href="/products/{{this._id}}">{{this.product.name}}</a></td>
        <td style="background-color:{{this.product.color}}"></td>
        <td>{{this.count}}</td>
        <td>{{this.total}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
